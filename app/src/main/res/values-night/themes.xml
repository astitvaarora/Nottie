<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Nottie" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your dark theme here. -->
        <item name="colorPrimary">@color/red</item>
        <item name="android:statusBarColor">@color/backgroundColor</item>
        <item name="android:windowBackground">@color/backgroundColor</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>
    <style name="btnWhite" parent="Widget.Material3.Button">
        <item name="colorOnBackground">@color/backgroundColor</item>
        <item name="backgroundColor">@color/backgroundColor</item>
        <item name="strokeWidth">2dp</item>
        <item name="strokeColor">@color/black</item>
        <item name="android:textColor">#505050</item>
    </style>
</resources>