<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.fragment.WelcomeFragment">

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/welcomeIV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:lottie_rawRes="@raw/animation"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="157dp"
        />
    <TextView
        android:id="@+id/greetingTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/welcomeIV"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="@string/let_s_organize_your_nottie"
        android:gravity="center"
        android:textColor="@color/black"
        android:fontFamily="@font/figtreeextrabold"
        android:layout_marginTop="93dp"
        android:textSize="25sp"
        />
    <TextView
        android:id="@+id/greetingdescTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/greetingTV"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="@string/make_your_todo_in_the_note_and_manage_your_priority_activity_in_daily_life_to_achieve_goals"
        android:fontFamily="@font/figtreeregular"
        android:textSize="16sp"
        android:lineSpacingExtra="4dp"
        android:gravity="center"
        android:textColor="@color/black"
        android:layout_marginTop="17dp"
        />

    <Button
        android:id="@+id/getstartedBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/greetingdescTV"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:minWidth="228dp"
        android:minHeight="54dp"
        android:layout_marginTop="53dp"
        android:textSize="14sp"
        android:backgroundTint="@color/red"
        android:text="Get Started"
        android:fontFamily="@font/figtreeregular"
        />
    <TextView
        android:id="@+id/alreayhaveaccTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/getstartedBtn"
        app:layout_constraintStart_toStartOf="parent"
        android:text="Already have an account?"
        android:fontFamily="@font/figtreebold"
        android:textSize="14sp"
        android:textColor="@color/red"
        android:layout_marginTop="24dp"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintEnd_toStartOf="@id/signInTv"
        />
    <TextView
        android:id="@+id/signInTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/getstartedBtn"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Login"
        android:fontFamily="@font/figtreeextrabold"
        android:textSize="14sp"
        android:textColor="@color/black"
        android:layout_marginStart="4dp"
        android:layout_marginTop="24dp"
        app:layout_constraintStart_toEndOf="@id/alreayhaveaccTv"
        />


</androidx.constraintlayout.widget.ConstraintLayout>